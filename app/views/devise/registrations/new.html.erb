

<div class="grid-x white_out">
  <div class="cell small-3"></div>
  <div class="cell small-8">

<br/>
<h4>Register for GigMaker</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field short-field">
    <%= f.label "User Name (8 characters min)" %>
    <%= f.text_field :username, autofocus: true %>
  </div>

  <div class="field med-field">
    <%= f.label "First Name" %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field med-field">
    <%= f.label "Last Name" %>
    <%= f.text_field :last_name, autofocus: true %>
  </div>

  <div class="field med-field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field med-field">
    <%= f.label "Password (8 characters minimum)" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field med-field">
    <%= f.label "Confirm Password" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
  <p class="close">I would also like to register as a</p>
  <%= f.check_box :is_host %>
  <%= f.label :is_host, "Host" %>
  <%= f.check_box :is_act %>
  <%= f.label :is_act, "Performer" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>


</div>
<div class="cell small-2"></div>
</div>
